{
  "name": "sivananda-housekeeping",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/danthareja/sivananda-housekeeping.git",
  "author": "Dan Thareja <danthareja@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "8.11.x",
    "npm": "5.6.x"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon index.js --ignore client",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "prisma generate",
    "build:client": "cd client && npm run build",
    "postinstall": "npm run build",
    "heroku-postbuild": "prisma deploy -f"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-datasource": "^0.1.3",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "axios": "^0.18.0",
    "csv-parse": "^3.1.3",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "lodash": "^4.17.11",
    "merge-graphql-schemas": "^1.5.7",
    "moment": "^2.22.2",
    "prisma-client-lib": "^0.2.59"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "dotenv": "^6.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "prettier": "1.14.3",
    "prisma": "^1.18.1"
  }
}
